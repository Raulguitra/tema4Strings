


package string9prueba;
import java.util.Scanner;
public class string9prueba {
	public static void main(String[] args) {

		
	
		
		Scanner teclado = new Scanner(System.in);
		
		
		String  s1;
		int i=0;
		int contamayus;
		int contaminus;
		int respuesta;
		int contanum;
		int contacon;
		int contaletras;
		int contaletras2;
		respuesta = 0;
		
		System.out.println("introduzca una palbra");
		s1 = teclado.nextLine();	
		while(s1.length()>80){
			System.out.println("Introduxca un aplabra menor de 80 palabras");
			s1 = teclado.nextLine();
		}
		contaletras=0;
		contacon=0;
		contamayus=0;
		contaminus=0;
		contanum=0;
		contaletras2=0;
		for(i=0;i<s1.length();i++){
			if(s1.charAt(i)=='a' ||  s1.charAt(i)=='e'|| s1.charAt(i)=='i' ||  s1.charAt(i)=='o'  ||  s1.charAt(i)=='u' || s1.charAt(i)=='A' ||  s1.charAt(i)=='E'|| s1.charAt(i)=='I' ||  s1.charAt(i)=='O'  ||  s1.charAt(i)=='U'){
				contacon++;
			}
			 if(s1.charAt(i)>96 && s1.charAt(i)<123 || s1.charAt(i)>64 && s1.charAt(i)<91){
					
				contaletras++;
			 
			
			 }
		
		 if(s1.charAt(i)>47 && s1.charAt(i)<58){
			contanum++;
			
		 }
		}

			
			System.out.print(" la frase tiene " + contacon + " vocales " + contaletras  + " consonates y " + contanum + " numeros");
			

		
	}
		
	}