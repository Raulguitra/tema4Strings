
package prueba;

import java.util.Scanner;
public class prueba {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner teclado = new Scanner(System.in);

		//1. Leer una frase de máximo 80 caracteres y escribirla progresivamente es decir si la frase es:
		//“ciervo”, el programa debe imprimir//
		
		
		String s1;
		int i;
		int contamayus;
		int contaminus;
		
		
		
		


		
			
		System.out.println("Escribe una frase:");
		s1=teclado.nextLine();
		
		while(s1.length()>80){
			System.out.println("Escribe una frase menor de 80 palabras:");
			s1=teclado.nextLine();
		}
		contaminus=0;
		contamayus=0;
		for(i=0; i<s1.length();i++ ){
			
			if(s1.charAt(i)>96 || s1.charAt(i)<123){
				contaminus=contaminus+1;
			}
			if(s1.charAt(i)>64 || s1.charAt(i)<91){
				contamayus=contamayus+1;
			
		}
		

				
				

		}
	
		System.out.println("Escribe una frase menor de 80 palabras:"+ contamayus +" y minusculas" + contaminus);
		
		
		
		}
	}