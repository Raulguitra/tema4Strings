
package prueba;

import java.util.Scanner;
public class prueba {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);

		int n;

		int k;
		int conta;
		int suma;
		suma= 0;
		conta=0;

		System.out.println("introduzca el un numero");
		n=sc.nextInt();

		while(n!=0){
			conta = conta ++;






			if(n%5==0){
				suma = suma +n;



			}//end if

		
		System.out.println("introduzca otro numero hasta 0");
		n=sc.nextInt();

	}//end while


	System.out.println("suma " + suma + "numeros intro" + conta);





}

}
