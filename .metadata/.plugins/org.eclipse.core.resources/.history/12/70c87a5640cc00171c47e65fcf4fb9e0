import java.util.Scanner;
import java.util.concurrent.SynchronousQueue;
public class prueba {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//2. Dada una frase de no más de 80 caracteres hacer un programa que busque cuántas mayúsculas
				//y minúsculas tiene y lo imprima//
				Scanner teclado = new Scanner(System.in);
				
				String frase;
				int i=0;
				
				
				frase=teclado.nextLine();
				int contamayus=0;	int contaminus=0;
				for(i=0; i<frase.length(); i++){
					if(frase.charAt(i)>64 && frase.charAt(i)<91){
						contamayus++;
					}
					if(frase.charAt(i)>96 && frase.charAt(i)<123){
						contaminus++;
					
					}		
				}

System.out.println("la frase esta de maluma contiene "  + contamayus + " mayusculas y " + contaminus + " minusculas");
}
}