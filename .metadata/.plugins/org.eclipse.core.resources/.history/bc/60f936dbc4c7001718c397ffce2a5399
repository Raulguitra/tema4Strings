import java.util.Scanner;
public class prueba {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
				//se generan 20 numeros de tipo entre 10 y -10 almacenados en un vector.
				//calcula y muestra la media y cuantoss numeros hay
		
		
		int Array1[];
		Array1 = new int[5];
		int i=0;
		int suma=0;
		
		
		for(i=0; i<5; i++){
			
			Array1[i]=(int)Math.floor(Math.random()*21-10);
			suma= suma + Array1[i];
			System.out.printf("%5d",Array1[i]);
		}
		System.out.println();
		System.out.println("la media es" + (float)suma/5);
		System.out.println("han salido " + i + " numeros")
		;
	}
	
	
}