import java.util.Scanner;
public class prueba {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//2. Leer del teclado dos vectores de dimensión 10 y construir un tercer vector cuyos componentes
		//sean la suma de los dos anteriores. Luego se imprime el tercer vector. A continuación se ordena
		//y se vuelve a imprimir.

		int Array1[];
		Array1 = new int[10];
		int Array2[];
		Array2 = new int[10];
		int i=0;
		int k=0;
		int suma1=0;
		int suma2=0;


		for(i=0; i<10; i++){

			Array1[i]=(int)Math.floor(Math.random()*21-10);
			suma1= suma1 + Array1[i];
			System.out.printf("%5d",Array1[i]);
		}
		System.out.println();
		for(k=0; k<10; k++){

			Array2[k]=(int)Math.floor(Math.random()*21-10);
			suma2= suma2 + Array2[k];
			System.out.printf("%5d",Array2[k]);
			
			
		}
		
		System.out.println();
		
		
		for(i=0; i<10; i++){
			for(k=0; k<10; k++){
				System.out.printf("%5d",Array2[k]+Array1[i]);
			}

		}

		
		

		}
		}