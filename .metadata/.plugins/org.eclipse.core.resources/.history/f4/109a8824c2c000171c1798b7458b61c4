
package prueba;

import java.util.Scanner;
public class prueba {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);

		int n;

		int k;
		
		int conta;
		int sumapar=0;
		int sumaimpar=0;
		
		conta=0;

		System.out.println("introduzca el un numero");
		n=sc.nextInt();

		while(n!=0){
			conta = conta + 1;
			
                if(conta%2==0){
				sumapar = sumapar +n;
				
				



			}//end if
			if(conta%2 != 0){
				sumaimpar=sumaimpar+n;
			
				

			}//end if

		
		System.out.println("introduzca otro numero hasta 0");
		n=sc.nextInt();

	}//end while


	System.out.println("sumaimpar " + sumaimpar + " sumapar " + sumapar  );





}

}
